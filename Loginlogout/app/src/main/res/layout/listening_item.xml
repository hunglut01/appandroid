<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:id="@+id/itemGrammarLinear">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/custom_item_istview"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/lbl_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:paddingLeft="40dp"
                android:text="text"
                android:textColor="#022D18"
                android:textFontWeight="6"
                android:textSize="30dp"
                android:layout_centerHorizontal="true"></TextView>
            <TextView
                android:id="@+id/lbl_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#022D18"
                android:text="text"
                android:layout_below="@+id/lbl_title"
                android:paddingLeft="60dp"
                android:fontFamily="sans-serif-condensed"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lbl_time"
                android:layout_below="@+id/lbl_number"
                android:text="text"
                android:textColor="#022D18"
                android:paddingLeft="60dp"
                android:paddingBottom="12dp"
                android:fontFamily="sans-serif-condensed"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>