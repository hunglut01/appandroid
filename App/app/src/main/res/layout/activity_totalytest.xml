<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".totaltest_activity"
    android:orientation="vertical">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        android:background="#A8A29D">

        <Button
            android:layout_marginLeft="10dp"
            android:id="@+id/txt_numques"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="1/38" />
        <Button
            android:id="@+id/btn_back"
            style="@android:style/Widget.DeviceDefault.Button.Toggle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="5dp"
            android:background="#CFCDCD"
            android:text="BACK" />
        <Button
            android:id="@+id/btn_next"
            style="@android:style/Widget.DeviceDefault.Button.Toggle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="0dp"
            android:background="#cfcdcd"
            android:text="Next" />
        <Button
            android:layout_marginRight="10dp"
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submit"
            android:background="@drawable/button"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>
    <include layout="@layout/context_total1"/>
    <include layout="@layout/context_total2"/>


</LinearLayout>