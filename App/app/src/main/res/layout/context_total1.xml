<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/totallisten">
    <LinearLayout

        android:id="@+id/layout_image"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        >
        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="50dp"/>
    </LinearLayout>
    <TableLayout

        android:id="@+id/layout_anslisten_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_margin="10dp">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Select answer on your answer sheet."
            android:background="#FFB1A9A9"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:weightSum="4"
            android:background="@drawable/border_white">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <Button
                    android:id="@+id/a"
                    style="@android:style/Widget.Button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/backgroud"
                    android:text="A."
                    android:textSize="13dp"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <Button
                    android:id="@+id/b"
                    style="@android:style/Widget.Button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/backgroud"
                    android:text="B."
                    android:textSize="13dp"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <Button
                    android:id="@+id/c"
                    style="@android:style/Widget.Button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/backgroud"
                    android:text="C."
                    android:textSize="13dp"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <Button
                    android:id="@+id/d"
                    style="@android:style/Widget.Button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/backgroud"
                    android:text="D."
                    android:textSize="13dp"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>


        </TableRow>

    </TableLayout>
    <TableLayout
        android:visibility="gone"
        android:id="@+id/layout_anslisten"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="#FFB1A9A9">
            <TextView
                android:id="@+id/stt1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="7." />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Select answer on your answer sheet."
                />
        </LinearLayout>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:weightSum="3"
            android:background="@drawable/border_white">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <Button
                    android:id="@+id/a1"
                    style="@android:style/Widget.Button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/backgroud"
                    android:text="A."
                    android:textSize="13dp"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <Button
                    android:id="@+id/b1"
                    style="@android:style/Widget.Button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/backgroud"
                    android:text="B."
                    android:textSize="13dp"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <Button
                    android:id="@+id/c1"
                    style="@android:style/Widget.Button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/backgroud"
                    android:text="C."
                    android:textSize="13dp"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

        </TableRow>

    </TableLayout>
    <TableLayout
        android:visibility="gone"
        android:id="@+id/layout_anslisten1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_margin="10dp">
        <LinearLayout
            android:background="#FFB1A9A9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/stt2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="8." />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Select answer on your answer sheet."
                android:background="#FFB1A9A9"/>
        </LinearLayout>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:weightSum="3"
            android:background="@drawable/border_white">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <Button
                    android:id="@+id/a2"
                    style="@android:style/Widget.Button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/backgroud"
                    android:text="A."
                    android:textSize="13dp"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <Button
                    android:id="@+id/b2"
                    style="@android:style/Widget.Button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/backgroud"
                    android:text="B."
                    android:textSize="13dp"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <Button
                    android:id="@+id/c2"
                    style="@android:style/Widget.Button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/backgroud"
                    android:text="C."
                    android:textSize="13dp"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

        </TableRow>

    </TableLayout>
    <TableLayout
        android:visibility="gone"
        android:id="@+id/layout_anslisten2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_margin="10dp">
        <LinearLayout
            android:background="#FFB1A9A9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/stt3"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="9." />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Select answer on your answer sheet."
                android:background="#FFB1A9A9"/>
        </LinearLayout>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:weightSum="3"
            android:background="@drawable/border_white">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <Button
                    android:id="@+id/a3"
                    style="@android:style/Widget.Button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/backgroud"
                    android:text="A."
                    android:textSize="13dp"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <Button
                    android:id="@+id/b3"
                    style="@android:style/Widget.Button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/backgroud"
                    android:text="B."
                    android:textSize="13dp"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <Button
                    android:id="@+id/c3"
                    style="@android:style/Widget.Button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/backgroud"
                    android:text="C."
                    android:textSize="13dp"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

        </TableRow>

    </TableLayout>
    <LinearLayout
        android:id="@+id/layout_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_stop"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/audio_status"
            android:layout_centerInParent="true"
            android:text=">"
            android:textSize="8dp"/>

        <SeekBar
            android:id="@+id/audio_status"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_margin="10dp"/>


    </LinearLayout>


</LinearLayout>