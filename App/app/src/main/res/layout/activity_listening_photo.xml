<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".listening.listening_photo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <Button
                android:id="@+id/txt_numques"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="1/10" />
            <Button
                android:id="@+id/btn_back"
                style="@android:style/Widget.DeviceDefault.Button.Toggle"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:background="#FFB1A9A9"
                android:text="BACK" />
            <Button
                android:id="@+id/btn_next"
                style="@android:style/Widget.DeviceDefault.Button.Toggle"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="0dp"
                android:background="#FFB1A9A9"
                android:text="Next" />
            <Button
                android:id="@+id/btn_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/submit"
                android:background="@drawable/button"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">
            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="300dp"/>
        </LinearLayout>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Select answer on your answer sheet."
                android:background="#FFB1A9A9"/>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:weightSum="4"
                android:background="@drawable/border_white">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/a"
                        style="@android:style/Widget.Button"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/backgroud"
                        android:text="A."
                        android:textSize="13dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/b"
                        style="@android:style/Widget.Button"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/backgroud"
                        android:text="B."
                        android:textSize="13dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/c"
                        style="@android:style/Widget.Button"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/backgroud"
                        android:text="C."
                        android:textSize="13dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/d"
                        style="@android:style/Widget.Button"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/backgroud"
                        android:text="D."
                        android:textSize="13dp" />
                </LinearLayout>


            </TableRow>

        </TableLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_stop"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/audio_status"
            android:layout_centerInParent="true"
            android:text=">"
            android:textSize="8dp"/>

        <SeekBar
            android:id="@+id/audio_status"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_margin="10dp"/>


    </LinearLayout>

</RelativeLayout>