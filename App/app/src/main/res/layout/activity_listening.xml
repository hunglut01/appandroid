<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".listening.listening_conversation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <Button
                android:id="@+id/txt_numques"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="3/18" />
            <Button
                android:id="@+id/btn_back"
                style="@android:style/Widget.DeviceDefault.Button.Toggle"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:background="#FFB1A9A9"
                android:text="BACK" />
            <Button
                android:id="@+id/btn_next"
                style="@android:style/Widget.DeviceDefault.Button.Toggle"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="0dp"
                android:background="#FFB1A9A9"
                android:text="Next" />
            <Button
                android:id="@+id/btn_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nộp bài"
                android:background="@drawable/button"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="1. Select answer on your answer sheet."
                android:background="#FFB1A9A9"/>
            <TableRow>

                <Button
                    android:id="@+id/a_1"
                    android:background="@drawable/backgroud"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="A."
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/a1"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="day la cau hoi 1"
                    android:textSize="10dp" />
            </TableRow>
            <TableRow>
                <Button
                    android:id="@+id/b_1"
                    android:background="@drawable/backgroud"
                    android:layout_height="30dp"
                    android:layout_width="30dp"
                    android:text="B."
                    android:textSize="10dp"/>
                <TextView
                    android:id="@+id/b1"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="day la cau hoi 1"
                    android:layout_marginLeft="10dp"
                    android:textSize="10dp"/>
            </TableRow>
            <TableRow>
                <Button
                    android:id="@+id/c_1"
                    android:background="@drawable/backgroud"
                    android:layout_height="30dp"
                    android:layout_width="30dp"
                    android:text="C."
                    android:textSize="10dp"
                    />
                <TextView
                    android:id="@+id/c1"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="day la cau hoi 1"
                    android:layout_marginLeft="10dp"
                    android:textSize="10dp"/>
            </TableRow>
            <TableRow>
                <Button
                    android:id="@+id/d_1"
                    android:background="@drawable/backgroud"
                    android:layout_height="30dp"
                    android:layout_width="30dp"
                    android:text="D."
                    android:textSize="10dp"/>
                <TextView
                    android:id="@+id/d1"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="day la cau hoi 1"
                    android:layout_marginLeft="10dp"
                    android:textSize="10dp"/>
            </TableRow>
        </TableLayout>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="2. Select answer on your answer sheet."
                android:background="#FFB1A9A9"/>
            <TableRow>

                <Button
                    android:id="@+id/a_2"
                    android:background="@drawable/backgroud"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="A."
                    android:textSize="10dp"/>

                <TextView
                    android:id="@+id/a2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="day la cau hoi 1"
                    android:textSize="10dp"
                    android:layout_marginLeft="10dp"/>
            </TableRow>
            <TableRow>
                <Button
                    android:id="@+id/b_2"
                    android:background="@drawable/backgroud"
                    android:layout_height="30dp"
                    android:layout_width="30dp"
                    android:text="B."
                    android:textSize="10dp"/>
                <TextView
                    android:id="@+id/b2"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="day la cau hoi 1"
                    android:textSize="10dp"
                    android:layout_marginLeft="10dp"/>
            </TableRow>
            <TableRow>
                <Button
                    android:id="@+id/c_2"
                    android:background="@drawable/backgroud"
                    android:layout_height="30dp"
                    android:layout_width="30dp"
                    android:text="C."
                    android:textSize="10dp"
                    />

                <TextView
                    android:id="@+id/c2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="day la cau hoi 1"
                    android:textSize="10dp"
                    android:layout_marginLeft="10dp"/>
            </TableRow>
            <TableRow>
                <Button
                    android:id="@+id/d_2"
                    android:layout_height="30dp"
                    android:layout_width="30dp"
                    android:text="D."
                    android:background="@drawable/backgroud"
                    android:textSize="10dp"/>
                <TextView
                    android:id="@+id/d2"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="day la cau hoi 1"
                    android:textSize="10dp"
                    android:layout_marginLeft="10dp" />
            </TableRow>
        </TableLayout>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="3. Select answer on your answer sheet."
                android:background="#FFB1A9A9"/>
            <TableRow>

                <Button
                    android:id="@+id/a_3"
                    android:background="@drawable/backgroud"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="A."
                    android:textSize="10dp"/>

                <TextView
                    android:id="@+id/a3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="day la cau hoi 1"
                    android:textSize="10dp"
                    android:layout_marginLeft="10dp"/>
            </TableRow>
            <TableRow>

                <Button
                    android:id="@+id/b_3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/backgroud"
                    android:text="B."
                    android:textSize="10dp" />
                <TextView
                    android:id="@+id/b3"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="day la cau hoi 1"
                    android:textSize="10dp"
                    android:layout_marginLeft="10dp"/>
            </TableRow>
            <TableRow>
                <Button
                    android:id="@+id/c_3"
                    android:layout_height="30dp"
                    android:layout_width="30dp"
                    android:text="C."
                    android:background="@drawable/backgroud"
                    android:textSize="10dp"
                    />
                <TextView
                    android:id="@+id/c3"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="day la cau hoi 1"
                    android:textSize="10dp"
                    android:layout_marginLeft="10dp"/>
            </TableRow>
            <TableRow>
                <Button
                    android:id="@+id/d_3"
                    android:layout_height="30dp"
                    android:layout_width="30dp"
                    android:text="D."
                    android:textSize="10dp"
                    android:background="@drawable/backgroud"/>
                <TextView
                    android:id="@+id/d3"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="day la cau hoi 1"
                    android:textSize="10dp"
                    android:layout_marginLeft="10dp"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_stop"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/audio_status"
            android:layout_centerInParent="true"
            android:text=">"
            android:textSize="8dp"/>

        <SeekBar
            android:id="@+id/audio_status"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_margin="10dp"/>


    </LinearLayout>

</RelativeLayout>